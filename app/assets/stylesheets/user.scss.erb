.form-control {
	width: 250px !important;
}

#form-user-edit {
	border: 2px solid #33ccff;
}

#form-user-edit-check {
	border: 2px solid #33ccff;
	display: inline-block;
}

#form-user-log {
	border: 2px solid #33ccff;
}

#user-edit-container {
	padding-bottom: 2%;
}

#user-log-container {
	padding-top: 7%;
	padding-bottom: 6%;
}

#user-edit-label {
	font-weight: bolder;
	font-size: 1.2em;
	letter-spacing: -0.1em;
	color: white;
}

#user-edit-label-check {
	font-weight: bolder;
	font-size: 1.2em;
	letter-spacing: -0.1em;
	color: white;
	display: inline-block
}

#user-log-label {
	font-weight: bolder;
	font-size: 1.2em;
	letter-spacing: -0.1em;
	color: white;
}

#user-submit {
	margin-right: 0.4%;
}

.jumbotron#user {
	background-image: asset-url('/assets/background.gif');
	background-size: cover;
	height: 500px;
}

.user-profile-picture {
	border-radius: 50%;
	width: 276px;
	height: 183px;
}

div#affiliate-check {
	display: inline-block;	
}

div#user-profile {
	width: 100%;
}

div#profile-picture {
	text-align: center;
}

div#profile-picture p#user-name {
	font-size: 1.8em;
	color: white;
	font-weight: lighter;
}

div#user-action-menu ul, div#user-action-menu ul a {
	list-style: none;
	font-size: 1em;
	color: white;
	text-decoration: none;
	width: 20%;
	border: 3px solid #66b3ff;
	background-color: #80bfff;
	-moz-box-shadow: 0 2px 3px 0px rgba(0, 0, 0, 0.5);
	-webkit-box-shadow: 0 2px 3px 0px rgba(0, 0, 0, 0.5);
	box-shadow: 0 2px 3px 0px rgba(0, 0, 0, 0.5);
	z-index: 999999;
	border: 0;
}

div#user-action-menu ul {
	padding-bottom: 4px;
}

ul li#user-action a:hover {
	-moz-box-shadow: 0 2px 3px 0px rgba(0, 255, 0, 0.5);
	-webkit-box-shadow: 0 2px 3px 0px rgba(0, 255, 0, 0.5);
	box-shadow: 3 5px 7px 3px rgba(0, 255, 0, 0.5);
	z-index: 999999;
	border: 0;
}

ul li#action-menu-header {
	color: white;
	font-size: 1.4em;
	font-weight: bold;
	text-decoration: underline;
}

div#user-wishlist {
	padding-left: 10px;
	padding-top: 10px;
	padding-right: 10px;
	width: 23%;
	border: 3px solid #66b3ff;
	background-color: #80bfff;
	-moz-box-shadow: 0 2px 3px 0px rgba(0, 0, 0, 0.5);
	-webkit-box-shadow: 0 2px 3px 0px rgba(0, 0, 0, 0.5);
	box-shadow: 0 2px 3px 0px rgba(0, 0, 0, 0.5);
	z-index: 999999;
	border: 0;
}

div#wishlist-break {
	border-top: 2px solid lightblue;
}

img.wishlist-item {
	width: 256px;
	height: 163px;
	display: inline-block;
}

div#user-wishlist p#user-name {
	font-size: 1.8em;
	color: white;
	font-weight: lighter;
}

h4#wishlist-header {
	color: white;
	font-size: 1.4em;
	font-weight: bold;
}