<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="jumbotron" id="user-edit">
  <div class="container" id ="user-log-container" align="center">
    <div class="input-group">
      <%= f.label "Username", id: "user-log-label" %><br />
      <%= f.text_field :login, autofocus: true, class: "form-control", id: "form-user-log" %>
    </div>

    <div class="input-group">
      <%= f.label :password, id: "user-log-label" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control", id: 'form-user-log' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="input-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, id: "user-log-label" %>
      </div>
    <% end -%>

    <div class="input-group">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
