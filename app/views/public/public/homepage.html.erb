<%= link_to 'Empty cart', empty_cart_path if user_signed_in?%><br>
<%= link_to 'Lockpick set', cart_add_item_path(1) if user_signed_in? %><br>
<%= link_to 'Motorcycle jacket', cart_add_item_path(2) if user_signed_in?%><br>

<% @products.each do |p|%>
	<%= p.product_name %><br>
	<%= image_tag(p.picture.url, alt: p.product_name, size: "450x300") %><br>
	<%= p.product_id %><br>
	<%= p.product_price == 0.0 ? "N/A" : "Â£#{p.product_price}" %><br>
	<%= p.product_description %><br>
	<%= link_to 'Delete this Product' , product_destroy_path(p), data: {confirm: "Are you sure?"} if user_is_admin? %><br>

	<% if product_available?(p) %>
		<%= button_to "Add item to cart", cart_add_item_path(p.product_id) if user_signed_in? %><br>
	<% else %>
		<%= button_to "Product not available", cart_add_item_path(p.product_id), :disabled => :true if user_signed_in? %><br>
	<% end %>
<% end %>
