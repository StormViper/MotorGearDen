<h2>Brand settings</h2>
<div class="jumbotron" id="brand">
	<div class="container" id="user-edit-container" align="center">
		<div id="user-address" align="left">
			<div id="product-top-menu" align="center">
				<button onclick="createBrand()" id="product-detail">Create brand</button>
				<button onclick="updateBrand()" id="product-detail">Edit brand</button>
			</div>
		</div>
	</div>
			<div id="create-brand" align="center">
				<%= render 'form', obj: @brand %>
			</div>
			<div id="update-brand" align="center">

				<h2 id="menu-header">Edit an existing brand</h2>
				<%= form_tag(brand_menu_path, method: "get") do %>
					<%= text_field_tag :search, params[:search] %>
    			<%= submit_tag "Search", :name => nil %>
				<% end %>
<ul class="list-group" id="brand-list">
				<% @brands.each do |b| %>
					<li class="list-group-item" id="brand-list-item"><%= link_to "ID: #{b.id} | #{b.name}", brand_edit_path(b.id) %></li>
				<% end %>
			<%= will_paginate @brands %>
</ul>
		</div>
</div>
