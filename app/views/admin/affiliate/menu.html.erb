<h2>Affiliate settings</h2>
<div class="jumbotron" id="brand">
	<div class="container" id="user-edit-container" align="center">
		<div id="user-address" align="left">
			<div id="product-top-menu" align="center">
				<button onclick="createBrand()" id="product-detail">Create affiliate</button>
				<button onclick="updateBrand()" id="product-detail">Edit affiliate</button>
			</div>
		</div>
	</div>
			<div id="create-brand" align="center">
				<%= render 'form', obj: @affiliate %>
			</div>
			<div id="update-brand" align="center">

				<h2 id="menu-header">Edit an existing brand</h2>
				<%= form_tag(affiliate_menu_path, method: "get") do %>
					<%= text_field_tag :search, params[:search] %>
    			<%= submit_tag "Search", :name => nil %>
				<% end %>
<ul class="list-group" id="brand-list">
				<% @affiliates.each do |a| %>
					<li class="list-group-item" id="brand-list-item"><%= link_to "ID: #{a.id} | #{a.name}", affiliate_edit_path(a.id), remote: :true, id: "brand-edit-link" %><%= button_to 'Destroy', affiliate_destroy_path(a), method: :get, data: {confirm: "Are you sure?"} %></li>
				<% end %>
</ul>
<div id="edit-form"></div>
		</div>
</div>
